# Ornakala Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=Ornakala Backend
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./ornakala.db
DATABASE_ECHO=False

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,*

# Email Configuration (Optional - for future implementation)
EMAIL_ENABLED=False
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=

# Redis Configuration (Optional - for future caching)
REDIS_URL=

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development